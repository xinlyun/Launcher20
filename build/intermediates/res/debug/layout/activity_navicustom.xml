<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



   <com.amap.api.navi.AMapNaviView
       android:layout_marginTop="40dp"
        android:id="@+id/customnavimap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
    <RelativeLayout
        android:id="@+id/rl1_title"
        android:background="@drawable/titlebackgroup"
        android:layout_width="match_parent"
        android:layout_height="40px">

    </RelativeLayout>

    <ImageView
        android:id="@+id/navi_image_navi"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="740dp"
        android:src="@drawable/floatimage"
        android:background="@drawable/floatflag"
        android:layout_width="90dp"
        android:layout_height="90dp"
        />
    <LinearLayout
        android:background="@drawable/titlebackgroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <Button
            android:id="@+id/btn_custom_exit"
            android:layout_width="60dp"
            android:textColor="@color/white"
            android:text="退出"
            android:layout_marginLeft="20dp"
            android:background="#0077d1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#70000000"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/navi_text_hour"
            android:text="12"
            android:textColor="#ff4373"
            android:textSize="30dp"
            android:layout_marginLeft="8dp"
            android:layout_width="44dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="小时"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/navi_text_min"
            android:text="12"
            android:textColor="#ff4373"
            android:textSize="30dp"
            android:layout_marginLeft="8dp"
            android:layout_width="44dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="分"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/navi_text_distance"
            android:textSize="30dp"
            android:text="210"
            android:textColor="#ff4373"
            android:layout_marginLeft="60dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13" />
        <TextView
            android:text="公里"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        </LinearLayout>
</RelativeLayout>
